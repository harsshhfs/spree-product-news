<% self.title = "Ajankohtaista" %>

<div class="container-news">
<% if params[:tag] %>
	<h2 class="pagetitle">News Tagged &lsquo;<%= params[:tag] %>&rsquo;</h2>
<% elsif params[:year]  %>
	<h2 class="pagetitle">Archive for <%= params[:year].to_i %>, <%= params[:year].to_i %></h2>
<% end %>

<%= render 'article', :article => @article %>
<%= render :partial => 'article_small', :collection => @articles %>

<% if @total_pages %>

<div class="navigation">
  <% if @total_pages > 1 && @current_page < @total_pages %>
		<div class="alignleft"><a href="<%= url_for(:overwrite_params => {:page => @current_page + 1}) %>" >&laquo; Older Entries</a></div>
	<% end %>
	<% if @current_page > 1 %>
		<div class="alignright"><a href="<%= url_for(:overwrite_params => {:page => @current_page - 1}) %>" >Newer Entries &raquo;</a></div>
	<% end %>
	<br class="clear" />
</div>
<% end %>
	
<% content_for :sidebar do %>

  <%= render 'sidebar' %>

<% end %>
</div>
<br class="clear" />
