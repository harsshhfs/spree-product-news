
<div  <%=has_extra? ? 'class="leftie"':'width="800"'%> >

  <div class="heading">
    <h3><%= link_to_article article %></h3>
  </div>

  <div class="entry">

    <%= html_transform article.body %>

    <% article %>
  </div>
  <div class="meta">
    <% if @article.tags.present? %>
      Tags: 
      <%= raw @article.tags.split(',').map { |tag|  link_to(tag, news_tag_path(tag), :rel => 'tag')}.join(', ') %>
    <% end %>
    <span class="date">Posted @ <%= format_date article.date %></span>    
  </div>

  <div class="navigation">
    <% if @article.previous %>
  	<div class="alignleft">Previous: <%= link_to_article @article.previous %></div>
  	<% end %>
    <% if @article.next %>
  	<div class="alignright">Next: <%= link_to_article @article.next %> </div>
  	<% end %>
  	<br class="clear" />
  </div>

</div>

<% if has_extra? %>
  <div  class="rightie">
    <%= render 'product_box' , :product =>  @product  %>
  </div>
<% end %>